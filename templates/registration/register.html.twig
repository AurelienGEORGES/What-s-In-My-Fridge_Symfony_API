{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1 class="text-center my-3">L'inscription c'est par ici!</h1>
<section class="container">
		<div class="d-flex justify-content-center my-1 mx-3">
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, {
            label: 'Pseudo * : '
        }) }}

			{{ form_row(registrationForm.email, {
            label: 'Email * : '
        }) }}

			{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe * : '
        }) }}

			{{ form_row(registrationForm.agreeTerms, {
            label: 'Accord avec la politique de confidentialité * : '
        }) }}
<div class="d-flex justify-content-center my-4">
        <button type="submit" class="btn">S'inscrire</button>
        </div>
    {{ form_end(registrationForm) }}
    </div>

		<div class="d-flex justify-content-center">
				<img class="img-fluid my-3 mx-3" src="{{ asset('images/logo-WIMF.jpg') }}" alt="trouve des recettes adaptées à ton frigo"/>
			</div>

	</section>
{% endblock %}
